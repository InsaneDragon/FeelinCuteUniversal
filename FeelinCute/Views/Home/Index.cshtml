@model List<ProductForCookie>
@{
    var secondaryImages = ViewBag.SecondaryImages as Dictionary<int, string>;
}

    <head>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/heart.css" asp-append-version="true">
</head>
<body>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="~/images/carousel/slide1.jpg" alt="First slide">
                <div class="carousel-text">Welcome to FeelinCute - Your Eco-Friendly Pet Shop</div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/images/carousel/slide2.jpg" alt="Second slide">
                <div class="carousel-text">Discover Our Best Sellers - Sustainable and Safe for Your Pets</div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/images/carousel/slide3.jpg" alt="Third slide">
                <div class="carousel-text">Join Us on Our Journey - Sustainability for a Better Tomorrow</div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/images/carousel/slide4.jpg" alt="Third slide">
                <div class="carousel-text">Hear from Our Eco-Conscious Community - Happy Pets, Happy Planet</div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/images/carousel/slide5.jpg" alt="Third slide">
                <div class="carousel-text">Discover Our Latest Eco-Friendly Products and Innovative Solutions</div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    <section class="top-product container">
        <span class="big-text red">Best Seller</span>
        <div class="main">
            <div class="Sides picture-container padd-40">
                <img class="main-img" src="~/images/cat-tree.jpg" />
            </div>
            <div class="Sides product-text padd-40">
                <h2 class="text-md">3 Piece Knit-Set for women</h2>
                <h6>Price</h6>
                <div class="price-container">
                    <span class="discounted-price">$ 75.00</span>
                    <span class="price">$ 26.00</span>
                    <span class="discount">Save 65%</span>
                </div>
                <div class="icon-container">
                    <img class="small-icon" src="~/images/icons/globe.png" />
                    <span class="icon-text">FREE SHIPPING within US</span>
                </div>
                <div class="icon-container">
                    <img class="small-icon" src="~/images/icons/heart.svg" />
                    <span class="icon-text">#1 Choice by our customers</span>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">
                        <span>Details</span>
                        <div class="right arrow-down"></div>
                    </button>
                    <div class="dropdown-content">
                        <span>
                            • Measures approximately: 24" x 19.5" x 50"
                            <br />
                            • 100% all-natural Ash Wood
                            <br />

                            • 5 levels for ultimate kitty play
                            <br />

                            • Sleek, modern S-curve design
                            <br />

                            • Cozy Hammock and Basket Lounge
                            <br />

                            • 2 Removable sisal scratcher side pads
                            <br />

                            • 4 Removable felt platform covers to stimulate scratching and stress relief
                            <br />

                            • Hideaway cubby
                            <br />

                            • Plush faux fur cushion for hideaway cubby
                            <br />

                            • Top observation platform
                            <br />

                            • Made from non-toxic and pet-safe materials
                            <br />

                            • Assembly Required
                        </span>
                    </div>
                </div>
                <button class="add-btn form-control" onclick="AddToCart(1)">Add to Cart</button>
                <a style="color:white" class="buy-btn form-control">Buy Now</a>
            </div>
        </div>
    </section>
    <section class="products">
        <span class="big-text">Popular Choices</span>
        <div id="productCarousel" class="carousel slide" data-interval="false">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="flexbox flex-wrap">
                        @for (int i = 0; i < 4; i++)
                        {
                            ProductForCookie product = Model[i];
                            string SecondaryImage = secondaryImages != null && secondaryImages.ContainsKey(product.Id)
                            ? secondaryImages[product.Id]
                            : "1.jpg";
                            string fullsecondarylink = $"/images/productimages/product{product.Id}/{SecondaryImage}";
                            <div class="product" id="product-container-@product.Id">
                                <div class="product-wrapper">
                                    <a class="product-img"
                                       data-hover-image="@fullsecondarylink"
                                       original-image="/images/@product.Image"
                                       href="/Home/ProductDetails?productId=@product.Id"
                                       style="background-image:url(/images/@product.Image);">
                                    </a>
                                    <img src="/images/@product.Image" id="mini-image-@product.Id" alt="Mini Image" class="mini-image">
                                </div>
                                @if (product.Checked == true)
                                {
                                    <input checked type="checkbox" class="checkbox like-checkbox" id="checkbox-@product.Id" />
                                }
                                else
                                {
                                    <input type="checkbox" class="checkbox like-checkbox" id="checkbox-@product.Id" />
                                }
                                <label for="checkbox-@product.Id" class="heart-label">
                                    <svg id="heart-svg" viewBox="467 392 58 57">
                                        <g id="Group" fill="none" fill-rule="evenodd" transform="translate(467 392)">
                                            <path id="heart" d="M29.144 20.773c-.063-.13-4.227-8.67-11.44-2.59C7.63 28.795 28.94 43.256 29.143 43.394c.204-.138 21.513-14.6 11.44-25.213-7.214-6.08-11.377 2.46-11.44 2.59z" fill="#AAB8C2" />
                                            <circle id="main-circ" fill="#E2264D" opacity="0" cx="29.5" cy="29.5" r="1.5" />
                                        </g>
                                    </svg>
                                </label>
                                <h6 style="margin-top:8px">@product.Name</h6>
                                @if (product.Discount != null || product.Discount != 0)
                                {
                                    <span class="discounted-price sm-resp-text">$ @product.Price</span>
                                    <span class="discount sm-resp-text">$ @product.GetDiscountedPrice()</span>
                                }
                                else
                                {
                                    <span class="price">$ @product.Price</span>
                                }
                                <button class="add-btn form-control AddToCart" id="@product.Id">Add to Cart</button>
                                <a style="color:white" href="/CheckOut/CheckOutView?productId=@product.Id" class="buy-btn form-control">Buy Now</a>
                            </div>
                        }
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="flexbox flex-wrap">
                        @for (int i = 4; i < Model.Count; i++)
                        {
                            ProductForCookie product = Model[i];
                            string SecondaryImage = secondaryImages != null && secondaryImages.ContainsKey(product.Id)
                            ? secondaryImages[product.Id]
                            : "1.jpg";
                            string fullsecondarylink = $"/images/productimages/product{product.Id}/{SecondaryImage}";
                            <div class="product" id="product-container-@product.Id">
                                <div class="product-wrapper">
                                    <a class="product-img"
                                       data-hover-image="@fullsecondarylink"
                                       original-image="/images/@product.Image"
                                       href="/Home/ProductDetails?productId=@product.Id"
                                       style="background-image:url(/images/@product.Image);">
                                    </a>
                                    <img src="/images/@product.Image" id="mini-image-@product.Id" alt="Mini Image" class="mini-image">
                                </div>
                                @if (product.Checked == true)
                                {
                                    <input checked type="checkbox" class="checkbox like-checkbox" id="checkbox-@product.Id" />
                                }
                                else
                                {
                                    <input type="checkbox" class="checkbox like-checkbox" id="checkbox-@product.Id" />
                                }
                                <label for="checkbox-@product.Id" class="heart-label">
                                    <svg id="heart-svg" viewBox="467 392 58 57">
                                        <g id="Group" fill="none" fill-rule="evenodd" transform="translate(467 392)">
                                            <path id="heart" d="M29.144 20.773c-.063-.13-4.227-8.67-11.44-2.59C7.63 28.795 28.94 43.256 29.143 43.394c.204-.138 21.513-14.6 11.44-25.213-7.214-6.08-11.377 2.46-11.44 2.59z" fill="#AAB8C2" />
                                            <circle id="main-circ" fill="#E2264D" opacity="0" cx="29.5" cy="29.5" r="1.5" />
                                        </g>
                                    </svg>
                                </label>
                                <h6 style="margin-top:8px">@product.Name</h6>
                                @if (product.Discount != null)
                                {
                                    <span class="discounted-price sm-resp-text">$ @product.Price</span>
                                    <span class="discount sm-resp-text">$ @product.GetDiscountedPrice()</span>
                                }
                                else
                                {
                                    <span class="sm-resp-text">$ @product.Price</span>
                                }
                                <button class="add-btn form-control AddToCart" id="@product.Id">Add to Cart</button>
                                <a style="color:white" href="/CheckOut/CheckOutView?productId=@product.Id" class="buy-btn form-control">Buy Now</a>
                            </div>
                        }
                        <div class="high bg-light product">
                            <a href="/Products/ProductsList?page=1" class="btn btn-dark centered">See All</a>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
                <div class="dark-circle" style="color:white">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </div>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
                <div class="dark-circle">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </div>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>
    <div class="comments-container">
        <div class="stars">
            <span class="star">&#9733;</span>
            <span class="star">&#9733;</span>
            <span class="star">&#9733;</span>
            <span class="star">&#9733;</span>
            <span class="star">&#9733;</span>
        </div>
        <h2 style="margin-bottom: 20px; text-align:center">What people think of our products</h2>
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <div class="comment">
                        <div class="comment-text">
                            <span>Absolutely love the eco-friendly toys I got for my dog! They're durable and I feel great knowing they're safe for the environment</span>
                        </div>
                        <div class="comment-pic">
                            <img src="~/images/awatars/1.PNG" alt="Profile Picture">
                            <p class="name">Alice Hansley</p>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="comment">
                        <div class="comment-text">
                            <span>These sustainable cat trees are fantastic! My cat loves it, and I appreciate the use of non-toxic, recycled materials</span>
                        </div>
                        <div class="comment-pic">
                            <img src="~/images/awatars/2.PNG" alt="Profile Picture">
                            <p class="name">Jane Smith</p>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="comment">
                        <div class="comment-text">
                            <span>The natural pet shampoos are amazing! They leave my dog's coat shiny and soft without any harsh chemicals</span>
                        </div>
                        <div class="comment-pic">
                            <img src="~/images/awatars/3.PNG" alt="Profile Picture">
                            <p class="name">Ashley Johnson</p>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="comment">
                        <div class="comment-text">
                            <span>My pets adore the organic treats! It’s reassuring to know they’re munching on something healthy and sustainably sourced</span>
                        </div>
                        <div class="comment-pic">
                            <img src="~/images/awatars/4.jpg" alt="Profile Picture">
                            <p class="name">Emily Parker</p>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="comment">
                        <div class="comment-text">
                            <span>Thank you for offering eco-friendly pet beds! They’re comfortable for my pets and made with recycled materials, which is a win-win</span>
                        </div>
                        <div class="comment-pic">
                            <img src="~/images/awatars/5.jpg" alt="Profile Picture">
                            <p class="name">Sophia Collins</p>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="comment">
                        <div class="comment-text">
                            <span>I was thrilled to find eco-friendly cat litter that actually works! It clumps well and controls odor, all while being kind to the planet.</span>
                        </div>
                        <div class="comment-pic">
                            <img src="~/images/awatars/6.jpg" alt="Profile Picture">
                            <p class="name">Isabella Reed</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/js/home.js" asp-append-version="true"></script>
