@model List<ProductForCookie>
<head>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/heart.css" asp-append-version="true">
</head>
<body>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="~/images/carousel/1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/images/carousel/2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/images/carousel/3.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <section class="top-product container">
        <span class="big-text">Hottest Product</span>
        <div class="main">
            <div class="Sides picture-container padd-40">
                @*<img class="main-img" src="~/images/knit-set.png" />*@
            </div>
            <div class="Sides product-text padd-40">
                <h2 class="text-md">3 Piece Knit-Set for women</h2>
                <h6>Price</h6>
                <div class="price-container">
                    <span class="discounted-price">$ 75.00</span>
                    <span class="price">$ 26.00</span>
                    <span class="discount">Save 65%</span>
                </div>
                <div class="icon-container">
                    <img class="small-icon" src="~/images/icons/globe.png" />
                    <span class="icon-text">FREE SHIPPING within US</span>
                </div>
                <div class="icon-container">
                    <img class="small-icon" src="~/images/icons/heart.svg" />
                    <span class="icon-text">#1 Choice by our customers</span>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">
                        <span>Details</span>
                        <div class="right arrow-down"></div>
                    </button>
                    <div class="dropdown-content">
                        <span>
                            • Measures approximately: 24" x 19.5" x 50"
                            <br />
                            • 100% all-natural Ash Wood
                            <br />

                            • 5 levels for ultimate kitty play
                            <br />

                            • Sleek, modern S-curve design
                            <br />

                            • Cozy Hammock and Basket Lounge
                            <br />

                            • 2 Removable sisal scratcher side pads
                            <br />

                            • 4 Removable felt platform covers to stimulate scratching and stress relief
                            <br />

                            • Hideaway cubby
                            <br />

                            • Plush faux fur cushion for hideaway cubby
                            <br />

                            • Top observation platform
                            <br />

                            • Made from non-toxic and pet-safe materials
                            <br />

                            • Assembly Required
                        </span>
                    </div>
                </div>
                <button class="add-btn form-control" onclick="AddToCart(1)">Add to Cart</button>
                <a style="color:white" class="buy-btn form-control">Buy Now</a>
            </div>
        </div>
    </section>
    <section class="products">
        <span class="big-text">Popular Choices</span>
        <div id="productCarousel" class="carousel slide" data-interval="false">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    @for (int i = 0; i < 4; i++)
                    {
                        ProductForCookie product = Model[i];
                        <div class="product" id="product-container-@product.Id">
                            <div class="product-wrapper">
                                @Html.ActionLink("", "ProductDetails", "Home", new { productId = product.Id}, new { style=$"background-image:url(/images/{product.Image});", @class = "product-img" })
                                <img src="/images/@product.Image" id="mini-image-@product.Id" alt="Mini Image" class="mini-image">
                            </div>
                            @if (product.Checked == true)
                            {
                                <input checked type="checkbox" class="checkbox like-checkbox" id="checkbox-@product.Id" />
                            }
                            else
                            {
                                <input type="checkbox" class="checkbox like-checkbox" id="checkbox-@product.Id" />
                            }
                            <label for="checkbox-@product.Id" class="heart-label">
                                <svg id="heart-svg" viewBox="467 392 58 57">
                                    <g id="Group" fill="none" fill-rule="evenodd" transform="translate(467 392)">
                                        <path id="heart" d="M29.144 20.773c-.063-.13-4.227-8.67-11.44-2.59C7.63 28.795 28.94 43.256 29.143 43.394c.204-.138 21.513-14.6 11.44-25.213-7.214-6.08-11.377 2.46-11.44 2.59z" fill="#AAB8C2" />
                                        <circle id="main-circ" fill="#E2264D" opacity="0" cx="29.5" cy="29.5" r="1.5" />
                                    </g>
                                </svg>
                            </label>
                            <h6 style="margin-top:8px">@product.Name</h6>
                            @if (product.Discount != null || product.Discount != 0)
                            {
                                <span class="discounted-price">$ @product.Price</span>
                                <span class="price">$ @product.GetDiscountedPrice()</span>
                                <span class="discount">Save @product.Discount %</span>
                            }
                            else
                            {
                                <span class="price">$ @product.Price</span>
                            }
                            <button class="add-btn form-control AddToCart" id="@product.Id">Add to Cart</button>
                            <a style="color:white" href="/CheckOut/CheckOutView?productId=@product.Id" class="buy-btn form-control">Buy Now</a>
                        </div>
                    }
                </div>
                <div class="carousel-item">
                    @for (int i = 4; i < Model.Count; i++)
                    {
                        ProductForCookie product = Model[i];
                        <div class="product" id="product-container-@product.Id">
                            <div class="product-wrapper">
                                @Html.ActionLink("", "ProductDetails", "Home", new { productId = product.Id}, new { style=$"background-image:url(/images/{product.Image});", @class = "product-img" })
                                <img src="/images/@product.Image" id="mini-image-@product.Id" alt="Mini Image" class="mini-image">
                            </div>
                            @if (product.Checked == true)
                            {
                                <input checked type="checkbox" class="checkbox like-checkbox" id="checkbox-@product.Id" />
                            }
                            else
                            {
                                <input type="checkbox" class="checkbox like-checkbox" id="checkbox-@product.Id" />
                            }
                            <label for="checkbox-@product.Id" class="heart-label">
                                <svg id="heart-svg" viewBox="467 392 58 57">
                                    <g id="Group" fill="none" fill-rule="evenodd" transform="translate(467 392)">
                                        <path id="heart" d="M29.144 20.773c-.063-.13-4.227-8.67-11.44-2.59C7.63 28.795 28.94 43.256 29.143 43.394c.204-.138 21.513-14.6 11.44-25.213-7.214-6.08-11.377 2.46-11.44 2.59z" fill="#AAB8C2" />
                                        <circle id="main-circ" fill="#E2264D" opacity="0" cx="29.5" cy="29.5" r="1.5" />
                                    </g>
                                </svg>
                            </label>
                            <h6 style="margin-top:8px">@product.Name</h6>
                            @if (product.Discount != null)
                            {
                                <span class="discounted-price">$ @product.Price</span>
                                <span class="price">$ @product.GetDiscountedPrice()</span>
                                <span class="discount">Save @product.Discount %</span>
                            }
                            else
                            {
                                <span class="price">$ @product.Price</span>
                            }
                            <button class="add-btn form-control AddToCart" id="@product.Id">Add to Cart</button>
                            <a style="color:white" href="/CheckOut/CheckOutView?productId=@product.Id" class="buy-btn form-control">Buy Now</a>
                        </div>
                    }
                    <div class=" high bg-light ">
                        <a href="/Products/ProductsList?page=1" class="btn btn-dark">See All</a>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
                <div class="dark-circle">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </div>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
                <div class="dark-circle">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </div>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </section>
    <div class="comments-container">
        <div class="stars">
            <span class="star">&#9733;</span>
            <span class="star">&#9733;</span>
            <span class="star">&#9733;</span>
            <span class="star">&#9733;</span>
            <span class="star">&#9733;</span>
        </div>
        <h2 style="margin-bottom: 20px; text-align:center">What people think of our products</h2>
        <section class="container text-center my-3">
            <div class="row mx-auto my-auto justify-content-center">
                <div id="Comments" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="comment">
                                <div class="comment-text">
                                    <span>My self confidence has risen to the top after buying this sweatshirt</span>
                                </div>
                                <div class="comment-pic">
                                    <img src="~/images/awatars/1.PNG" alt="Profile Picture">
                                    <p class="name">Alice Hansley</p>
                                </div>
                            </div>
                            <div class="comment">
