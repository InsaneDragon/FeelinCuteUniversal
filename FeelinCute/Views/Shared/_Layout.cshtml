<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Petsy</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
</head>
<body id="app-content">
    <div class="page-container">
        <header>
            <div class="promotion-bar">
                <div id="promotionCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="d-block">Exclusive Offer: 20% off on all items!</div>
                        </div>
                        <div class="carousel-item">
                            <div class="d-block">Buy one, get one free on select products!</div>
                        </div>
                        <div class="carousel-item">
                            <div class="d-block">Free shipping on orders over $50!</div>
                        </div>
                        <div class="carousel-item">
                            <div class="d-block">Limited-time discount: 15% off sitewide!</div>
                        </div>
                        <div class="carousel-item">
                            <div class="d-block">Sign up today for a 10% off your first order!</div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#promotionCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#promotionCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <nav class="d-flex" id="navbar">
                <div class="nav-container " id="search">
                    <button class="search-icon" id="search-btn">
                        <img src="~/images/icons/magnifying-glass.png" onclick="toggleShow()" />
                    </button>
                    <form class="search-container container" asp-action="ProductsList" asp-controller="Products" method="post">
                        <input type="text" id="search" name="search" placeholder="Search anything..." class="search-box">
                        <button type="submit" class="search-icon">
                            <img src="~/images/icons/magnifying-glass.png" onclick="toggleShow()" />
                        </button>
                    </form>
                </div>
                <div class="nav-container logo-container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <p class="logo-text"> 
                            <span class="brown-logo">EarthFriendly</span>
                            <span class="green-logo">Pets</span>
                        </p>
                    </a>
                </div>
                <div class="nav-container icons-container">
                    <div class="dropdown profile-container">
                        <button class="profile-btn"><img class="profile-icon nav-icon" src="~/images/icons/profile.png" /></button>
                        <div class="dropdown-content">
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                    <button id="liked-btn" class="liked-item">
                        <img class="heart-icon nav-icon" src="~/images/icons/heart-red.svg" />
                        <span class="like-count like-count-icon">0</span>
                    </button>
                    <button class="cart-button" id="cart-btn">
                        <img src="~/images/icons/shopping-cart.png" class="shopping-cart nav-icon">
                        <span class="cart-count cart-count-icon">0</span>
                    </button>
                </div>
            </nav>
        </header>
        <main role="main">
            @await Component.InvokeAsync("EmailPopup")
            <div id="cart-popup" class="right-popup">
                <div class="left">
                    <button id="cart-close" class="popup-close">X</button>
                    <span>Your Cart</span>
                </div>
                <div class="right items-num">
                    <span class="cart-count">0</span>
                    <span>Items</span>
                </div>
                <section id="cartForm">
                    @await Component.InvokeAsync("CartList")
                </section>
            </div>
            <div id="search-popup" class="right-popup">

                    <button id="search-close" class="popup-close">X</button>
            </div>
            <div id="liked-popup" class="right-popup">
                <div class="left">
                    <button id="likedCloseBtn" class="popup-close">X</button>
                    <span>Your Liked Items</span>
                </div>
                <div class="right items-num">
                    <span class="like-count">0</span>
                    <span>Items</span>
                </div>
                <section id="likedForm">
                    @await Component.InvokeAsync("LikedItems")
                </section>
            </div>
            <div class="wrapper">
                @RenderBody()
            </div>
        </main>
    </div>
    <footer id="footer">
        <div class="footer-top">
            <div class="border-bottom flex-box">
                <div class="email-form border-bottom">
                    <div class="flex-item">
                        <div>
                            <svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                <!-- Dog body -->
                                <ellipse cx="50" cy="60" rx="30" ry="20" fill="#FFFFFF" />
                                <!-- Dog head -->
                                <circle cx="50" cy="40" r="20" fill="#FFFFFF" />
                                <!-- Dog eyes -->
                                <circle cx="40" cy="35" r="6" fill="#006400" />
                                <circle cx="60" cy="35" r="6" fill="#006400" />
                                <circle cx="40" cy="35" r="3" fill="#000000" />
                                <circle cx="60" cy="35" r="3" fill="#000000" />
                                <!-- Dog nose -->
                                <circle cx="50" cy="50" r="5" fill="#000000" />
                                <!-- Dog mouth -->
                                <path d="M45 55 Q50 60 55 55" stroke="#000000" stroke-width="2" fill="none" />
                                <!-- Dog ears -->
                                <ellipse cx="30" cy="25" rx="10" ry="15" fill="#FFFFFF" />
                                <ellipse cx="70" cy="25" rx="10" ry="15" fill="#FFFFFF" />
                                <!-- Dog legs -->
                                <rect x="30" y="70" width="10" height="20" fill="#FFFFFF" />
                                <rect x="60" y="70" width="10" height="20" fill="#FFFFFF" />
                                <!-- Dog tail -->
                                <path d="M80 60 Q90 50 85 70" stroke="#FFFFFF" stroke-width="5" fill="none" />
                            </svg>

                            <svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                <!-- Cat body -->
                                <ellipse cx="50" cy="60" rx="30" ry="20" fill="#FFFFFF" />
                                <!-- Cat head -->
                                <circle cx="50" cy="40" r="20" fill="#FFFFFF" />
                                <!-- Cat eyes -->
                                <circle cx="40" cy="35" r="6" fill="#006400" />
                                <circle cx="60" cy="35" r="6" fill="#006400" />
                                <circle cx="40" cy="35" r="3" fill="#000000" />
                                <circle cx="60" cy="35" r="3" fill="#000000" />
                                <!-- Cat nose -->
                                <circle cx="50" cy="45" r="5" fill="#000000" />
                                <!-- Cat mouth -->
                                <path d="M45 50 Q50 55 55 50" stroke="#000000" stroke-width="2" fill="none" />
                                <!-- Cat ears -->
                                <polygon points="30,25 20,40 40,40" fill="#FFFFFF" />
                                <polygon points="70,25 60,40 80,40" fill="#FFFFFF" />
                                <!-- Cat legs -->
                                <rect x="35" y="70" width="8" height="20" fill="#FFFFFF" />
                                <rect x="57" y="70" width="8" height="20" fill="#FFFFFF" />
                                <!-- Cat tail -->
                                <path d="M80 60 Q90 50 85 70" stroke="#FFFFFF" stroke-width="5" fill="none" />
                            </svg>
                        </div>
                        <h3>Join us to get special deals and discounts</h3>
                    </div>
                    <div class="email-group flex-item">
                        <input type="text" class="subscribe-input" placeholder="Email Address">
                        <div class="input-group-append">
                            <button class="btn-success btn" type="button">Sign Up</button>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:20px;">
                    <div class="box footer-links">
                        <h4>Useful Links</h4>
                        <ul class="inline">
                            <li>
                                @Html.ActionLink("Home","Index","Home")
                            </li>
                            <li>
                                <i class="bx bx-chevron-right"></i> <a href="#">About us</a>
                            </li>
                            <li>@Html.ActionLink("Terms Of Service","TermsOfService","Home")</li>
                            <li><i class="bx bx-chevron-right"></i> <a href="/Home/PrivacyPolicy">Privacy policy</a></li>
                        </ul>
                    </div>

                    <div class="box footer-contact">
                        <h4>Contact Us</h4>
                        <p>
                            <strong>Phone:</strong> +1 260 888 9945<br />
                            <strong>Email:</strong> bakhrievpulod@gmail.com
                        </p>
                    </div>
                </div>
            </div>
            <p style="margin-top:20px;">©2024 arion.com</p>
        </div>
    </footer>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.2/dist/confetti.browser.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<script src="~/js/site.js"></script>
@RenderSection("Scripts", required: false)
</html>
