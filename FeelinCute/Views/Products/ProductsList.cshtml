@model List<ProductForCookie>
<head>
    <link rel="stylesheet" href="~/css/productslist.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/heart.css" asp-append-version="true">
</head>
<body>
    <section class="app">
        <section class="filter">
            <span class="font-weight-bold">Filters</span>
            <span class="font-weight-bold" id="filter-count">(0)</span>
            <div class="filter-line">
                <div class="dropdown">
                    <button class="dropbtn">
                        <span>Gender</span>
                        <div class="right text-sm">+</div>
                    </button>
                    <div class="dropdown-content">
                        <span>
                            • Measures approximately: 24" x 19.5" x 50"
                            <br />
                            • 100% all-natural Ash Wood
                            <br />
                            • 5 levels for ultimate kitty play
                            <br />
                            • Sleek, modern S-curve design
                            <br />
                        </span>
                    </div>

                </div>
            </div>
            <div class="filter-line">
                <div class="dropdown">
                    <button class="dropbtn">
                        <span>Price</span>
                        <div class="right text-sm">+</div>
                    </button>
                    <div class="dropdown-content">
                        @{
                            int min = ViewBag.Min;
                            int max = ViewBag.Max;
                        }
                        <div class="range_container">
                            <div class="sliders_control center">
                                <input class="price-filter" id="fromSlider" type="range" value="@min" min="@min" max="@max" />
                                <input class="price-filter" id="toSlider" type="range" value="@max" min="@min" max="@max" />
                            </div>
                            <div class="form_control">
                                $<input type="number" id="fromInput" value="@min" min="@min" max="@max" />-
                                $<input type="number" id="toInput" value="@max" min="@min" max="@max" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="product-list">  
            @await Component.InvokeAsync("Products", new { products = Model })
        </section>
    </section>
    @if (ViewBag.TotalPages > 0)
    {
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    }
</body>
<script src="~/js/productslist.js"></script>
